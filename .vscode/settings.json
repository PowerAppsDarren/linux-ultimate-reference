{
  // Editor Core Settings
  "editor.fontSize": 14,
  "editor.fontFamily": "'Cascadia Code', 'Fira Code', 'JetBrains Mono', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.snippetSuggestions": "top",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.rulers": [80, 120],
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.stickyScroll.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 20,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "smooth",
  "editor.renderWhitespace": "all",

  // Markdown specific settings
  "[markdown]": {
    "editor.fontFamily": "Consolas, 'Courier New', monospace",
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },

  "gitdoc.enabled": true,

  // Theme settings
  "workbench.colorTheme": "Default Light+",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    //
    // ACTIVITY BAR
    // https://code.visualstudio.com/api/references/theme-color#activity-bar
    //
    "activityBar.activeBorder": "#1E90FF",
    "activityBar.activeBackground": "#0A66C2",
    "activityBar.border": "#084E8A",
    "activityBar.background": "#083E6B",
    "activityBar.foreground": "#E6F4FF",
    "activityBar.inactiveForeground": "#9EC9FF",
    "activityBarBadge.background": "#1E90FF",
    "activityBarBadge.foreground": "#001F3F",
    //
    // STATUS BAR
    // https://code.visualstudio.com/api/references/theme-color#status-bar
    //
    "statusBar.background": "#08233B",
    "statusBar.foreground": "#E6F4FF",
    "statusBarItem.activeBackground": "#0A66C2",
    "statusBarItem.hoverBackground": "#0E79D8",
    "statusBarItem.remoteBackground": "#07406A",
    "statusBarItem.remoteForeground": "#E6F4FF",
    //
    // TITLE BAR
    // https://code.visualstudio.com/api/references/theme-color#title-bar
    //
    "titleBar.activeBackground": "#083E6B",
    "titleBar.activeForeground": "#E6F4FF",
    "titleBar.inactiveBackground": "#08233B",
    "titleBar.inactiveForeground": "#A9D1FF",
    //
    // SIDEBAR
    // https://code.visualstudio.com/api/references/theme-color#side-bar
    //
    "sideBar.background": "#F3F9FF",
    "sideBar.foreground": "#083E6B",
    //
    // LIST
    // https://code.visualstudio.com/api/references/theme-color#list
    //
    "list.activeSelectionBackground": "#D9EEFF",
    "list.activeSelectionForeground": "#083E6B",
    "list.hoverBackground": "#D9EEFFCC",
    //
    // TABS
    // https://code.visualstudio.com/api/references/theme-color#tabs
    //
    "tab.activeBackground": "#EAF6FF",
    "tab.activeForeground": "#083E6B",
    "tab.inactiveBackground": "#F7FBFF",
    "tab.inactiveForeground": "#3A607F",
    "tab.activeBorderTop": "#0A66C2",
    "tab.hoverBackground": "#D9EEFF",
    "tab.hoverForeground": "#083E6B",
    "tab.unfocusedActiveBackground": "#D9EEFF80",
    "tab.unfocusedActiveForeground": "#083E6B99",
    "tab.unfocusedInactiveBackground": "#F7FBFF",
    "tab.unfocusedInactiveForeground": "#6EADEC",
    "editorGroupHeader.tabsBackground": "#F7FBFF",
    "editorGroupHeader.tabsBorder": "#084E8A",
    //
    // EDITOR
    // https://code.visualstudio.com/api/references/theme-color#editor
    //
    "editor.background": "#ffffff",
    "editor.foreground": "#083E6B",
    "editor.lineHighlightBackground": "#F0F8FF",
    "editor.selectionBackground": "#D9EEFF80",
    "editor.selectionHighlightBackground": "#BEE6FF40",
    "editorCursor.foreground": "#0A66C2",
    "editorIndentGuide.activeBackground1": "#084E8A",
    "editorIndentGuide.background1": "#BEE6FF80",
    //
    // SCROLLBAR
    // https://code.visualstudio.com/api/references/theme-color#scrollbar
    //
    "scrollbarSlider.activeBackground": "#0A66C2CC",
    "scrollbarSlider.background": "#BEE6FF80",
    "scrollbarSlider.hoverBackground": "#4DA3FFCC",
    //
    // BREADCRUMBS
    // https://code.visualstudio.com/api/references/theme-color#breadcrumbs
    //
    "breadcrumb.background": "#F7FBFF",
    "breadcrumb.foreground": "#083E6B",
    "breadcrumb.focusForeground": "#0A66C2",
    "breadcrumb.activeSelectionForeground": "#083E6B",
    //
    // TERMINAL
    // https://code.visualstudio.com/api/references/theme-color#terminal
    //
    "terminal.background": "#001F3F",
    "terminal.foreground": "#D9F0FF",
    "terminalCursor.background": "#EAF6FF",
    "terminalCursor.foreground": "#0A66C2",
    "terminal.ansiBlack": "#001F3F",
    "terminal.ansiBlue": "#0A66C2",
    "terminal.ansiCyan": "#1E90FF",
    "terminal.ansiGreen": "#2ECC71",
    "terminal.ansiMagenta": "#20C997",
    "terminal.ansiRed": "#FF6B6B",
    "terminal.ansiWhite": "#EAF6FF",
    "terminal.ansiYellow": "#FFD166",
    "terminal.ansiBrightBlack": "#083E6B",
    "terminal.ansiBrightBlue": "#4DA3FF",
    "terminal.ansiBrightCyan": "#85D7FF",
    "terminal.ansiBrightGreen": "#5EE5A0",
    "terminal.ansiBrightMagenta": "#6CE6C6",
    "terminal.ansiBrightRed": "#FF8A8A",
    "terminal.ansiBrightWhite": "#FFFFFF",
    "terminal.ansiBrightYellow": "#FFE6A7",
    "terminal.selectionBackground": "#0A66C280",
    "terminal.border": "#084E8A",
    "terminalOverviewRuler.cursorForeground": "#0A66C2",
    //
    // PANEL
    // https://code.visualstudio.com/api/references/theme-color#panel
    //
    "panel.background": "#F7FBFF",
    //
    // UI COMPONENTS
    // https://code.visualstudio.com/api/references/theme-color#ui-components
    //
    "dropdown.background": "#F7FBFF",
    "dropdown.foreground": "#083E6B",
    "dropdown.border": "#0A66C2",
    "input.background": "#F7FBFF",
    "input.foreground": "#083E6B",
    "input.border": "#0A66C2",
    "input.placeholderForeground": "#6EADEC99",
    "button.background": "#0A66C2",
    "button.foreground": "#ffffff",
    "button.hoverBackground": "#0E79D8",
    //
    // NOTIFICATIONS
    // https://code.visualstudio.com/api/references/theme-color#notifications
    //
    "notifications.background": "#EAF6FF",
    "notifications.foreground": "#083E6B",
    "notificationCenter.border": "#0A66C2",
    "notificationToast.border": "#0A66C2",
    //
    // MISC
    // https://code.visualstudio.com/api/references/theme-color#misc
    //
    "editorError.foreground": "#D9534F",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#0A66C2"
  },

  // Terminal settings
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,

  // Window settings
  "window.zoomLevel": 2,
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "toggle",

  // Workbench settings
  "workbench.tree.indent": 16,
  "workbench.startupEditor": "none",
  "workbench.editor.showTabs": "multiple",
  "workbench.sideBar.location": "left",

  // AI tools integration
  "aiTools.chatDocumentation.enabled": true,
  "aiTools.chatDocumentation.autoCreateFiles": true,
  "aiTools.chatDocumentation.folderFormat": "yyyy-MM-dd-brief-description",
  "aiTools.chatDocumentation.fileFormat": "NN-event-description",
  "aiTools.timeUpdate.enabled": true,
  "aiTools.timeUpdate.updateFrequencyMinutes": 30,
  "aiTools.timeUpdate.runOnAIEngagement": true,

  // Events that trigger time update
  "aiTools.triggers": [
    "onStartupFinished",
    "onChatPanelOpen",
    "onCopilotRequest"
  ],
  // AI Time Updater configuration
  "tasks.runOn": {
    "folderOpen": ["Update Current Time"]
  },

  // GitHub Copilot settings - ADDED TO FIX INSTRUCTIONS ISSUE
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "text": "Always follow these copilot instructions when we chat and generate code. There are instructions in there about documenting all of our chats together and creating a folder in 'ai-chats'. Please follow those instructions! You need to get the current date and time first so you know what to name the folder!"
    },
    {
      "file": ".github/copilot-instructions.md"
    }
  ],
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.editor.enableCodeCompletions": true,
  "github.copilot.editor.enableInlineSuggestions": true,
  "github.copilot.editor.enableChatCompletions": true,
  "github.copilot.editor.enableChatCompletionsInEditor": true,
  "github.copilot.editor.enableChatCompletionsInChat": true,
  "github.copilot.editor.enableChatCompletionsInChatPanel": true,
  "github.copilot.editor.enableChatCompletionsInChatPanelInline": true,
  "github.copilot.advanced.useInstructionFiles": true,

  // Critical: Point to the instructions file
  "github.copilot.advanced": {
    "instructionFilePath": "${workspaceFolder}/.github/copilot-instructions.md",
    "indentationMode": {
      "javascript": "tabs",
      "typescript": "tabs"
    }
  },

  // Ensure the file is included in context for each session
  "github.copilot.advanced.setFileContext": ".github/copilot-instructions.md",
  "github.copilot.advanced.setAutoCompletionsTemplate": "I want you to follow the instructions in the .github/copilot-instructions.md file for this project. Always apply those guidelines when generating code.",

  // File Settings
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": false,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": false,
    "**/.next": true,
    "**/.nuxt": true,
    "**/dist": false,
    "**/build": false,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.venv/**": true
  },

  // Search Settings
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": false,
    "**/build": false,
    "**/.next": true,
    "**/.venv": true,
    "**/__pycache__": true
  },

  // Git Settings
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",
  "git.postCommitCommand": "none",

  // JavaScript/TypeScript Settings
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // JSON Settings
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // HTML/CSS Settings
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Python Settings
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "black",

  // Prettier Settings
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.tabWidth": 2,
  "prettier.semi": true,
  "prettier.printWidth": 80,

  // ESLint Settings
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Emmet Settings
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },

  // Explorer Settings
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.autoReveal": true,

  // Debug Settings
  "debug.console.fontSize": 14,
  "debug.internalConsoleOptions": "openOnSessionStart",

  // Live Server Settings
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,

  // Code Spell Checker
  "cSpell.userWords": [
    "darren",
    "claude",
    "anthropic",
    "gitea",
    "cloudpanel",
    "portainer",
    "sashas",
    "zoomtan",
    "neurosity",
    "msapp",
    "powerfx",
    "pcfproj",
    "neese",
    "superpowerlabs",
    "agentic",
    "gitignore",
    "venv",
    "pnpm",
    "npmrc",
    "dockerize",
    "kubectl",
    "devcontainer"
  ],

  // Remote Development
  "remote.SSH.remotePlatform": {
    "coolify.darrensapps.app": "linux",
    "alienware": "linux"
  },
  "remote.autoForwardPortsSource": "hybrid",
  "remote.SSH.remoteServerListenOnSocket": true,
  "remote.SSH.showLoginTerminal": true,

  // Security
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.enabled": false,
  "security.allowedUNCHosts": ["wsl.localhost"]
}
